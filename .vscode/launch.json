{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "malagu serve",
            "program": "${workspaceRoot}/node_modules/@malagu/cli/bin/malagu",
            "args": [ "serve" ],
            "cwd": "${workspaceFolder}/app",
            "sourceMaps": true,
            // "outFiles": [
            //     "${workspaceRoot}/app/.malagu/**/*.js"
            // ],
            "env": {
                "NODE_ENV": "development"
            },
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "malagu serve",
            "program": "${workspaceRoot}/node_modules/@malagu/cli/bin/malagu-serve",
            // "args": ["-m", "release"],
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/app",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}
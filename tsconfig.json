{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@cellbang/desktop": [
        "ide-packages/desktop/src/common"
      ],
      "@cellbang/desktop/lib/*": [
        "ide-packages/desktop/src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "include": [
    "dev-packages/*/src",
    "packages-ide/*/src",
    "packages-api/*/src",
    "packages/*/src",
    "examples/*/test"
  ]
}
